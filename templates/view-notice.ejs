<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Notices</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #ef5835;
        padding: 20px;
      }
      h1 {
        text-align: center;
        color: white;
        font-size: 1.5em; /* Reduce h1 size */
      }
      .notice-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-height: 400px; /* Limit height */
        overflow-y: scroll; /* Add scroll bar */
      }
      .notice {
        border-bottom: 1px solid #ddd;
        padding: 10px 0; /* Reduce padding between notices */
      }
      .notice h2 {
        font-size: 1em; /* Reduce font size of notice title */
        color: #333;
        margin: 0; /* Remove extra margin around h2 */
      }
      .notice-date {
        color: #888;
        font-size: 0.8em; /* Further reduce date font size */
        margin-top: 5px; /* Add a small gap between title and date */
      }
    </style>
  </head>
  <body>
    <h1>Notices</h1>

    <!-- Notices Container with Scroll -->
    <div class="notice-container">
      <% notices.forEach(function(notice) { %>
      <div class="notice">
        <h2><%= notice.notice %></h2>
        <p class="notice-date"><%= new Date(notice.date).toDateString() %></p>
      </div>
      <% }); %>
    </div>
  </body>
</html>
